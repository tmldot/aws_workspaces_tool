#!/usr/bin/env bash
set -e

REPO_ROOT="$(git rev-parse --show-toplevel 2>/dev/null || pwd)"

# Prefer POSIX script
if [ -x "$REPO_ROOT/setup_dirs.sh" ]; then
  "$REPO_ROOT/setup_dirs.sh"
# Fallback to Windows batch via Git for Windows
elif [ -f "$REPO_ROOT/setup_dirs.bat" ]; then
  cmd.exe /c "$(printf "%s" "$REPO_ROOT" | sed 's:/:\\:g')\\setup_dirs.bat"
fi

